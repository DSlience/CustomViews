<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_20dp">

    <!--团购消息展示-->
    <com.adealink.viewslib.viewflipper.MarqueeViewFlipper
        android:id="@+id/msg_marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_start_end"
        android:layout_marginRight="@dimen/gap_start_end"
        android:background="@color/color_g5"
        app:marqueeAnimDuration="400"
        app:marqueeInterval="2000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/color_c1_c1d_corners_50dp_selector"
        android:gravity="center"
        android:minHeight="@dimen/dimen_44dp"
        android:onClick="inflateData"
        android:text="inflate and refresh data"
        android:textColor="@color/color_g7"
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="bold" />

</LinearLayout>